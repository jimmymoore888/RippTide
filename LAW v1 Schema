TYPE Law = {
  name: String,
  description: String,
  supply: Supply,
  burn: Burn,
  limit: Limit,
  distribution: Distribution,
  schedule: Schedule,
  liquidity: Liquidity
}

TYPE Supply = 
  | FixedSupply { amount: UInt }
  | MintableSupply { maxAmount: UInt }
  | CappedSupply { cap: UInt }

TYPE Burn = 
  | NoBurn
  | ManualBurn
  | AutomatedBurn { rate: UInt }

TYPE Limit = 
  | NoLimit
  | PercentageLimit { percentage: UInt }

TYPE Distribution = 
  | Airdrop { recipients: [Address] }
  | Vesting { schedule: [VestingSchedule] }
  | Savings { rate: UInt }

TYPE Schedule = 
  | DeterministicSchedule { interval: UInt }
  | DynamicSchedule { function: String }

TYPE Liquidity = 
  | NoLiquidity
  | BootstrapLiquidity { pair: Address }

TYPE VestingSchedule = {
  cliff: UInt,
  duration: UInt,
  recipients: [Address]
}
